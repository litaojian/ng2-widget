{
    "title": "菜单管理",
    "pageType": "TreeView",
    "restAPI": "/api/rest/menu",
    "idField": "menuid",
    "actions": {},
    "navTree": {
        "dataUrl": "/api/data/tree/menuTree"
    },
    "queryParams": { "filter": "all" },
    "queryForm": {
        "debug": false,
        "properties": {
            "menuname": {
                "type": "string",
                "title": "菜单名称",
                "widget": {
                    "placeholder": "请输入菜单名称"
                }
            }
        },
        "required": [""],
        "button": {
            "items": [{
                    "label": "查询",
                    "id": "query",
                    "submit": true
                },
                {
                    "label": "新增",
                    "id": "add"
                }
            ]
        }
    },
    "dataTable": {
        "extraParams": {},
        "showTotal": true,
        "pageSize": 15,
        "resReName": { "list": "rows", "total": "total" },
        "columns": [
            { "index": "menuname", "title": "菜单名称", "type": "string" },
            {
                "index": "orgtype",
                "title": "类型",
                "type": "string",
                "filters": [{ "text": "male", "value": "male" }, { "text": "female", "value": "female" }],
                "filterMultiple": false,
                "filter": "() => true",
                "sorter": "(a, b) => true"
            },
            {
                "index": "created",
                "title": "输入时间",
                "type": "date",
                "filters": [{ "text": "昨天", "value": "male" }, { "text": "本周", "value": "2" }, { "text": "当月", "value": "3" }],
                "filterMultiple": true,
                "filter": "() => true",
                "sorter": "(a, b) => true"

            },
            {
                "title": "操作区",
                "buttons": [{
                        "text": "删除",
                        "click": "delete"
                    },
                    {
                        "text": "编辑",
                        "click": "edit"
                    }
                ]
            }

        ]
    },
    "mainForm": {
        "properties": {
            "menuname": {
                "type": "string",
                "title": "菜单名称",
                "widget": {
                    "placeholder": "请输入名称"
                }
            },
            "menuurl": {
                "type": "string",
                "title": "菜单URL",
                "widget": {
                    "placeholder": "请输入菜单URL"
                }
            },
            "menudesc": {
                "type": "string",
                "title": "菜单功能描述",
                "widget": {
                    "id":"textarea",
                    "autosize": { "minRows": 2, "maxRows": 6 },
                    "placeholder": "请输入关于部门的职责描述"
                }
            },
            "parentid": {
                "type": "string",
                "title": "上级目录",
                "widget": {
                    "type": "hidden"
                }
            },         
            "menutype": {
                "type": "string",
                "title": "类型",
                "widget": {
                    "id": "select2",
                    "url": "menuType",
                    "placeholder": "请选择类型"
                }
            }
        },
        "required": ["menuname","menuurl"],
        "button": {
            "items": [{
                    "label": "保存",
                    "id": "save",
                    "submit": true
                },
                {
                    "label": "返回",
                    "id": "backto"
                }
            ]
        }
    }
}