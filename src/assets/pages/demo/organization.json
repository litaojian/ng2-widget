{
    "title": "组织机构管理",
    "pageType": "TreeView",
    "restAPI": "/api/rest/organization",
    "idField": "orgid",
    "actions": {},
    "navTree": {
        "dataUrl": "/api/data/tree/orgTree?url=ab&debug=1"
    },
    "queryParams": { "filter": "all" },
    "queryForm": {
        "debug": false,
        "properties": {
            "orgname": {
                "type": "string",
                "title": "部门名称",
                "widget": {
                    "placeholder": "请输部门入名称"
                }
            }
        },
        "required": ["name"],
        "button": {
            "items": [{
                    "label": "查询",
                    "id": "query",
                    "submit": true
                },
                {
                    "label": "新增",
                    "id": "add"
                }
            ]
        }
    },
    "dataTable": {
        "extraParams": {},
        "showTotal": true,
        "pageSize": 15,
        "resReName": { "list": "rows", "total": "total" },
        "columns": [
            { "index": "orgcode", "title": "机构代码", "type": "string" },
            { "index": "orgname", "title": "机构名称", "type": "string" },
            {
                "index": "orgtype",
                "title": "类型",
                "type": "string",
                "filters": [{ "text": "male", "value": "male" }, { "text": "female", "value": "female" }],
                "filterMultiple": false,
                "filter": "() => true",
                "sorter": "(a, b) => true"
            },
            {
                "index": "created",
                "title": "输入时间",
                "type": "date",
                "filters": [{ "text": "昨天", "value": "male" }, { "text": "本周", "value": "2" }, { "text": "当月", "value": "3" }],
                "filterMultiple": true,
                "filter": "() => true",
                "sorter": "(a, b) => true"

            },
            {
                "title": "操作区",
                "buttons": [{
                        "text": "删除",
                        "click": "delete"
                    },
                    {
                        "text": "编辑",
                        "click": "edit"
                    }
                ]
            }

        ]
    },
    "mainForm": {
        "properties": {
            "testname": {
                "type": "string",
                "title": "名称",
                "widget": {
                    "placeholder": "请输入名称"
                }
            },
            "testdesc": {
                "type": "string",
                "title": "描述",
                "widget": {
                    "placeholder": "请输入描述"
                }
            },
            "testage": {
                "type": "number",
                "title": "年龄",
                "default": 10
            },
            "testdate": {
                "type": "number",
                "title": "日期",
                "widget": {
                    "id": "date",
                    "format": "YYYY-MM-DD",
                    "placeholder": "请输入日期"
                }
            },
            "testype": {
                "type": "string",
                "title": "类型",
                "widget": {
                    "id": "select2",
                    "url": "docType",
                    "placeholder": "请选择类型"
                }
            }
        },
        "required": ["name"],
        "button": {
            "items": [{
                    "label": "保存",
                    "id": "save",
                    "submit": true
                },
                {
                    "label": "返回",
                    "id": "backto"
                }
            ]
        }
    }
}